  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Tests",
      "runtimeExecutable": "npm",
      "args": ["run", "test"],
      "request": "launch",
      "type": "node",
      "outputCapture": "std"
    },
    {
      "name": "Run E2E Tests",
      "runtimeExecutable": "npm",
      "args": ["run", "test:e2e"],
      "request": "launch",
      "type": "node",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
